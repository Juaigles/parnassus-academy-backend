# Variables de Entorno - Parnassus Academy Backend

# === CONFIGURACIÓN BÁSICA ===
NODE_ENV=development
PORT=3001

# === BASE DE DATOS ===
MONGO_URI=mongodb://localhost:27017/parnassus-academy

# === CORS Y LOGGING ===
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=info

# === JWT SECRETS ===
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# === BCRYPT ===
BCRYPT_SALT_ROUNDS=10

# === STRIPE (OPCIONAL) ===
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# === EMAIL (OPCIONAL) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# === PWA Y PUSH NOTIFICATIONS ===
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
FRONTEND_URL=http://localhost:3000

# === ADVANCED FEATURES FLAGS ===
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_2FA=true
ENABLE_PWA=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# === CERTIFICADOS ===
CERT_HASH_SECRET=your-certificate-hash-secret

# === NUEVAS CONFIGURACIONES DE MEJORAS ===

# Cache
CACHE_TTL=300000
CACHE_MAX_SIZE=1000

# Seguridad
XSS_PROTECTION=true
MALICIOUS_REQUEST_DETECTION=true
TIMING_ATTACK_PROTECTION=true

# Rate Limiting
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_API_MAX=100
RATE_LIMIT_PAYMENT_MAX=10
RATE_LIMIT_WINDOW=900000

# Monitoring
HEALTH_CHECK_ALERTS=true
SLOW_QUERY_THRESHOLD=100
METRICS_RETENTION_HOURS=24

# Database Optimization
DB_ENABLE_QUERY_MONITORING=true
DB_AUTO_CREATE_INDEXES=true
DB_CONNECTION_POOL_SIZE=10

# Logging
STRUCTURED_LOGGING=true
AUDIT_LOGGING=true
BUSINESS_EVENT_LOGGING=true
LOG_SANITIZATION=true
